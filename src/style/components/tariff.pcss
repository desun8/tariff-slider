.crcl-pink {
  background: linear-gradient(180deg, #ff83a5 0%, #fc70ff 100%);
}

.crcl-blue {
  background: linear-gradient(180deg, #8397ff 0%, #70fff6 100%);
}

.crcl-green {
  background: linear-gradient(180deg, #94ff83 0%, #70ffdd 100%);
}

.crcl-orange {
  background: linear-gradient(180deg, #ff8a00 0%, #ff7070 100%);
}

.crcl-purple {
  background: linear-gradient(180deg, #cb76ff 0%, #707fff 100%);
}

.crcl-cyan {
  background: linear-gradient(180deg, #47f4ff 0%, #70ffc3 100%);
}

.crcl-yellow {
  background: linear-gradient(180deg, #fff847 0%, #ff7070 100%);
}

.tariff-slider-control {
  position: absolute;
  top: 50%;
  width: 100%;
  transform: translateY(-50%);
  display: flex;
  justify-content: space-between;

  & button {
    @apply --trans;

    width: 90px;
    height: 80px;
    padding: 0;
    background: transparent;
    border: none;
    outline: none;
    cursor: pointer;

    &:hover {
      & svg circle {
        fill: #fff;
        /* stroke: #fff; */
      }

      & svg path {
        fill: #077891;
      }
    }

    & svg circle,
    & svg path {
      @apply --trans;
    }
  }

  & .owl-prev {
    visibility: "hidden";
    opacity: 0;
  }
}
